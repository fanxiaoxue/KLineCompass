<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.categoryinfo.ItemsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:layout_weight="1">
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:id="@+id/left02"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14px"
            android:src="@drawable/left02"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title02"
                android:textColor="#fff"
                android:layout_marginTop="4px"
                android:text="分时图"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name02"
                android:textColor="#0f0"
                android:layout_marginTop="14px"
                android:text="白糖1609"/>
        </LinearLayout>
        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/right02"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="480px"
            android:src="@drawable/rights"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/vp"
        android:layout_weight="9">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:gravity="center_horizontal"
        android:paddingLeft="20px"
        android:layout_weight="1.3"
        >
        <LinearLayout
            android:layout_width="90px"
            android:layout_height="match_parent"
            android:id="@+id/mnews"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/news"/>
            <TextView
                android:layout_width="70px"
                android:layout_height="30px"
                android:text="新闻"
                android:textSize="30px"
                android:gravity="center"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90px"
            android:layout_height="match_parent"
            android:id="@+id/mpankou"
            android:orientation="vertical"
            android:layout_marginLeft="60px">
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/pankou"/>
            <TextView
                android:layout_width="70px"
                android:layout_height="30px"
                android:text="盘口"
                android:textSize="30px"
                android:layout_marginLeft="8px"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/mfenshi"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px">
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/fengtime"/>
            <TextView
                android:layout_width="70px"
                android:layout_height="30px"
                android:text="分时"
                android:textSize="30px"
                android:layout_marginLeft="8px"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90px"
            android:layout_height="match_parent"
            android:id="@+id/mKclean"
            android:orientation="vertical"
            android:layout_marginRight="60px">
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/k_cline"/>
            <TextView
                android:layout_width="70px"
                android:layout_height="30px"
                android:text="K线"
                android:textSize="30px"
                android:layout_marginLeft="8px"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90px"
            android:layout_height="match_parent"
            android:id="@+id/mxiadan"
            android:orientation="vertical">
            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/xiadan"/>
            <TextView
                android:layout_width="70px"
                android:layout_height="30px"
                android:text="下单"
                android:textSize="30px"
                android:layout_marginLeft="8px"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
